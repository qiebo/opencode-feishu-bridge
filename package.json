    "pino-pretty": "^10.3.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "eslint": "^8.55.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
